<h1><%= markdown_to_html @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by
      <%= @post.user.name %>
    </small>
    <p>
      <br>
        <%= image_tag(@post.image.posts_show.url) if @post.image? %>
      </br>
      <%= markdown_to_html @post.body %>
    </p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>

  <div class="col-md-8">
    <%= render template: "comments/_form", locals: { topic: @topic, post: @post } %>
  </div>

  <% unless @post.comments.nil? %>
    <% @post.comments.each do |comment| %>
      <%= render template: "comments/_comment", locals: { topic: @topic, post: @post } %>
    <% end %>
  <% end %>
</div>